<%- model_class = Pacient -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:mascota) %>:</strong></dt>
  <dd><%= @pacient.mascota %></dd>
  <dt><strong><%= model_class.human_attribute_name(:client_id) %>:</strong></dt>
  <dd><%= Client.find(@pacient.client_id).nombre %></dd>
</dl>
<%= image_tag @pacient.avatar1.url(:medium) %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pacients_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pacient_path(@pacient), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pacient_path(@pacient),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
