<%= simple_form_for @appointment, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :fecha %>
  <%= error_span(@appointment[:fecha]) %>
  <%#= f.input :client_id %>
  <%= collection_select(:appointment, :client_id, Client.all, :id, :nombre, {}, {:multiple=>false}) %>
  <%= error_span(@appointment[:client_id]) %>
<br>
<br>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                appointments_path, :class => 'btn btn-default' %>
<% end %>
